<p id="notice"><%= notice %></p>

<h1>Cocktails</h1>

<br>
<%= link_to 'New Cocktail', new_cocktail_path, class: "btn btn-primary" %>
<br>
<br>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cocktails.each do |cocktail| %>
      <tr>
        <td><%= cocktail.name %></td>
        <td><%= link_to 'Show', cocktail, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_cocktail_path(cocktail), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', cocktail, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

